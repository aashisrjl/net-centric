@model IEnumerable<Assignment_4.Models.Actor>
@{
    ViewData["Title"] = "Actor List";
}

<a asp-action="Create" class="btn btn-primary mb-3">Create Actor</a>
<h1>@ViewData["Title"]</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Date of Birth</th>
            <th>Birth City</th>
            <th>Birth Country</th>
            <th>Height (inches)</th>
            <th>Biography</th>
            <th>Gender</th>
            <th>Net Worth</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var actor in Model)
            {
                <tr>
                    <td>@actor.Id</td>
                    <td>@actor.Name</td>
                    <td>@actor.DateOfBirth?.ToString("yyyy-MM-dd")</td>
                    <td>@actor.BirthCity</td>
                    <td>@actor.BirthCountry</td>
                    <td>@actor.HeightInches</td>
                    <td>@actor.Biography</td>
                    <td>@actor.Gender</td>
                    <td>@actor.NetWorth</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@actor.Id" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@actor.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr><td colspan="9" class="text-center">No actors found.</td></tr>
        }
    </tbody>
</table>
