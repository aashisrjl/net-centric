@model Assignment_4.Models.Movies
@{
    ViewData["Title"] = "Create Movie";
}

<h2>Create Movie</h2>
<form asp-action="Create" method="post" class="mt-4">
    <div class="form-group mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" required />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Rating" class="form-label"></label>
        <input asp-for="Rating" class="form-control" step="0.1" required />
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Budget" class="form-label"></label>
        <input asp-for="Budget" class="form-control" required />
        <span asp-validation-for="Budget" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Gross" class="form-label"></label>
        <input asp-for="Gross" class="form-control" required />
        <span asp-validation-for="Gross" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ReleaseDate" class="form-label"></label>
        <input asp-for="ReleaseDate" class="form-control" type="date" required />
        <span asp-validation-for="ReleaseDate" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Genre" class="form-label"></label>
        <input asp-for="Genre" class="form-control" required />
        <span asp-validation-for="Genre" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Runtime" class="form-label"></label>
        <input asp-for="Runtime" class="form-control" required />
        <span asp-validation-for="Runtime" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Summary" class="form-label"></label>
        <textarea asp-for="Summary" class="form-control" rows="3" required></textarea>
        <span asp-validation-for="Summary" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>