@model MyNewMvc.Models.MusicModel
@{
    ViewData["Title"] = "Create Music Page";
}

<h1>Create a Music</h1>
<form asp-action="Create" method="post">
    <div >
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" />
                <span asp-validation-for="Description" class="text-danger"></span>

    </div>

    <div>
        <label asp-for="Singer"></label>
        <input asp-for="Singer" type="text" />
        <span asp-validation-for="Singer" class="text-danger"></span>

    </div>
    @* //year of relase  *@
    <div>
        <label asp-for="YearOfRelease"></label>
        <input asp-for="YearOfRelease" type="number" />
        <span asp-validation-for="YearOfRelease" class="text-danger"></span>

    </div>
    @* duration *@
    <div>
        <label asp-for="Duration"></label>
        <input asp-for="Duration" type="text" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <button type="submit">Submit</button>
</form>
